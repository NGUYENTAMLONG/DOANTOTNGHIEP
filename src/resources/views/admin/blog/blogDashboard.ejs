<script>
  function responseHandler(res) {
    res.rows.forEach(function(row, i) {
      row.index = `<div class="text-center" style="width:50px">${i + 1}</div>`
    })
    return res
  }

  function coverFormatter(data) {
    return `<img src="${data}" class="blog-image" width="100%" alt="" onclick="zoomImg(this)">
    <!-- The Modal -->
    <div id="myModal" class="modal">
      <span class="close-btn" onclick="closeModal()">&times;</span>
      <img class="modal-content" id="preview-modal">
    </div>`
  }

  function typeFormatter(data) {
    return `
    <span class="type bg-primary text-light">${data}</span>
    `
  }


  function statisticalFormatter(data) {
    return `
    <div class="text-center container">
      <div class="d-flex justify-content-between">
        <span title="Số lượt thích">
          <i class="far fa-thumbs-up"></i> <br> ${ data.likes } <br>
        </span>
          <span title="Lượng views">
            <i class="far fa-eye"></i> <br> ${ data.views } <br>
          </span>
        </div>
      <div class="d-flex justify-content-between">
       <span title="Điểm đánh giá">
         <i class="fas fa-star"></i> <br> ${ data.rating } <br>
       </span>
       <span title="Số lượng đánh giá">
         <i class="fas fa-abacus"></i> <br> ${ data.counting } <br>
       </span>
        </div>
      </div>
   `
  }




  function createdAtFormatter(data) {
    return `<div class="text-center">${ moment(data).format("L") }<br> ${ moment(data).format("LT") }</div>`
  }

  function updatedAtFormatter(data) {
    return `<div class="text-center">${ moment(data).format("L") }<br> ${ moment(data).format("LT") }</div>`
  }

  function handleFormatter(data, row, index) {
    return `<div class="text-center">
      <p>Tac vu</p>
      </div>
    `
  }
</script>w
<script>
  //Delete checked 
  var $table = $('#table')
  var $button = $('#deleteChecked')

  $(function() {
    $button.click(function() {
      const idList = [];
      document.querySelectorAll("[name='btSelectItem']:checked").forEach((item, index) => {
        idList.push(item.parentElement.parentElement.parentElement.id)
      })
      // console.log(arr)
      swal({
        title: "Bạn có chắc chắn muốn xóa không",
        text: "Nếu xóa bạn vẫn có thể khôi phục Blog !",
        icon: "warning",
        buttons: true,
        dangerMode: true,
      }).then((willDelete) => {
        if (willDelete) {
          fetch(`/management/content/blog/deleteChecked`, {
              method: "DELETE", // or 'PUT'
              headers: {
                "Content-Type": "application/json",
                // 'Content-Type': 'application/x-www-form-urlencoded',
              },
              body: JSON.stringify(idList)
            })
            .then((response) => response.json())
            .then((data) => {
              if (data.isSuccess) {
                swal({
                  title: "Thành công",
                  text: "Đã xóa thành công !",
                  icon: "success",
                  button: "Ok!",
                }).then(() => {
                  location.reload();
                });
              } else {
                swal({
                  title: "Có lỗi rồi",
                  text: "Gặp lỗi hệ thống hoặc danh sách cần xóa trống !",
                  icon: "error",
                  button: "Ok!",
                })
              }
            })
            .catch((error) => {
              console.log("Error:", error);
            });
        } else {
          return;
        }
      });
    })
  });
</script>

</html>