<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BLOG DASHBOARD</title>
  <link rel="icon" href="/image/tablogo.png">
  <link rel="stylesheet" href="/css/fullscreenImg.css">

  <%- include("../../partials/link") %>

  <!----===== Boxicons CSS ===== -->
  <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
  <link href="https://unpkg.com/jquery-resizable-columns@0.2.3/dist/jquery.resizableColumns.css" rel="stylesheet">
  <link href="https://unpkg.com/bootstrap-table@1.20.2/dist/bootstrap-table.min.css" rel="stylesheet">
  <link href="https://unpkg.com/bootstrap-table@1.20.2/dist/extensions/page-jump-to/bootstrap-table-page-jump-to.min.css" rel="stylesheet">

  <link rel="stylesheet" href="/css/manage_manga.css">
  <style>
    .keywordZone,
    .descZone {
      max-width: 200px;
      overflow-x: scroll;
    }

    .keywordZone::-webkit-scrollbar,
    .descZone::-webkit-scrollbar {
      height: 8px;
      background-color: #f5f5f5;
      overflow: hidden;
      border-radius: 10px;
    }

    .keywordZone::-webkit-scrollbar-thumb,
    .descZone::-webkit-scrollbar-thumb {
      border-radius: 10px;
      -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
      background-color: #555;
    }
  </style>
</head>

<body>
  <%- include("../../admin/partials/header") %>
  <div class="container mt-2">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mt-2">
        <li class="breadcrumb-item"><a href="/management/content/admin">Trang quản lí</a></li>
        <li class="breadcrumb-item active" aria-current="page">Quản lí blog</li>
      </ol>
    </nav>
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-sm-12 col-md-6 col-lg-4 d-flex">
        <h3>Danh sách Blog</h3>
        <p class="align-items-center">
          <b>Số lượng: </b> <span class="badge badge-primary mr-3"> <%= blogs.length %> </span>
          <b>News: </b> <span class="badge badge-success"> <%= blogs.filter((blog)=> blog.type === "NEWS").length %> </span>
          <b>Spread: </b> <span class="badge badge-danger"> <%= blogs.filter((blog)=> blog.type === "SPREAD").length %> </span>
        </p>
      </div>
      <div class="col-sm-12 col-md-6 col-lg-4 d-flex mb-1">
        <a href="/management/content/blog/write-blog/submit-info" class="btn btn-sm btn-warning">Đăng Blog <i class="fab fa-slideshare"></i></a>
        <a href="/management/content/blog/trash" class="btn btn-sm btn-dark ml-2">Thùng rác <i class="fas fa-trash-alt"></i></a>
      </div>
      <div class="col-sm-12 col-md-6 col-lg-4 d-flex justify-content-between align-items-center mb-1">
        <a href="/management/content/blog/analysis" class="btn btn-sm btn-info">Thống kê <i class='bx bxs-pie-chart-alt-2'></i></a>
        <a href="https://my-site-zlkjtgow8a.disqus.com/admin/moderate/pending" class="btn btn-sm btn-danger" target="_blank">Bình luận <i class='bx bx-message-dots'></i></a>
        <button class="light-mode-button" aria-label="Toggle Light Mode" onclick="toggle_light_mode()">
          <span></span>
          <span></span>
        </button>
      </div>
    </div>
    <div id="toolbar" class="d-flex">
      <button id="deleteChecked" class="btn btn-danger btn-sm">Xóa hết <i class="fas fa-trash"></i></button>

      <select id="select" class="form-control ml-2" name="filterAlgorithm">
        <option value="and" selected>Tất cả</option>
        <option value="PENDING" class="status-option">Chưa duyệt</option>
        <option value="ACTIVE" class="status-option">Đã duyệt</option>
      </select>
      <button class="btn btn-secondary ml-2" id="filterBy"><i class="fas fa-filter"></i></button>
    </div>
    <table class="table table-striped table-bordered table-sm" id="table" data-height="250px" data-url="/management/content/blog/api/getList" data-pagination="true" data-show-columns="true" data-page-size="2" data-page-list="[2,4,6,10,25,30]" data-buttons-class="primary" data-resizable="true" data-toggle="table" data-show-toggle="true" data-search="true" data-show-jump-to="true" data-show-columns-toggle-all="true" data-show-columns-search="true" data-show-fullscreen="true" data-show-refresh="true" data-response-handler="responseHandler" data-click-to-select="true" data-advanced-search="true" data-id-table="advancedTable" data-show-print="true" data-show-export="true" data-show-pagination-switch="true" data-toolbar="#toolbar">
      <thead>
        <tr class="text-center">
          <th scope="col" data-field="index" data-sortable="true">STT</th>
          <th scope="col" data-field="cover" data-formatter="coverFormatter">Ảnh bìa</th>
          <th scope="col" data-field="title" data-sortable="true" data-formatter="titleFormatter">Tiêu đề</th>
          <th scope="col" data-field="desc" data-sortable="true" data-formatter="descFormatter">Tiêu đề</th>
          <th scope="col" data-field="author">Tác giả</th>
          <th scope="col" data-field="type" data-formatter="typeFormatter">Loại</th>
          <th scope="col" data-field="content" data-sortable="true" data-formatter="contentFormatter">Nội dung</th>
          <th scope="col" data-field="statistical" data-sortable="true" data-formatter="statisticalFormatter">Thống kê</th>
          <th scope="col" data-field="role" data-sortable="true" data-formatter="roleFormatter">Vai trò người viết</th>
          <th scope="col" data-field="keywords" data-sortable="true" data-formatter="keywordFormatter">Từ khóa</th>
          <th scope="col" data-field="source" data-sortable="true" data-formatter="sourceFormatter">Nguồn</th>
          <th scope="col" data-field="link" data-sortable="true" data-formatter="linkFormatter">Link</th>
          <th scope="col" data-field="status" data-sortable="true" data-formatter="statusFormatter">Trạng thái</th>
          <th scope="col" data-field="writtenBy" data-sortable="true" data-formatter="writtenByFormatter">Người viết</th>
          <th scope="col" data-field="createdAt" data-sortable="true" data-formatter="createdAtFormatter">Tạo</th>
          <th scope="col" data-field="updatedAt" data-sortable="true" data-formatter="updatedAtFormatter">Cập nhật</th>
          <th data-field="state" data-checkbox="true"></th>
          <th scope="col" data-formatter="handleFormatter">Tác vụ</th>
        </tr>
      </thead>
    </table>
  </div>
</body>
<%- include("../../partials/script") %>
<script src="/js/moment.min.js"></script>
<script src="/js/darkMode.js"></script>
<script src="https://unpkg.com/jquery-resizable-columns@0.2.3/dist/jquery.resizableColumns.min.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.20.2/dist/bootstrap-table.min.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.20.2/dist/extensions/resizable/bootstrap-table-resizable.min.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.20.2/dist/extensions/custom-view/bootstrap-table-custom-view.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.20.2/dist/extensions/page-jump-to/bootstrap-table-page-jump-to.min.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.20.2/dist/extensions/toolbar/bootstrap-table-toolbar.min.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.20.2/dist/extensions/print/bootstrap-table-print.min.js"></script>
<script src="https://unpkg.com/tableexport.jquery.plugin/tableExport.min.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.20.2/dist/extensions/export/bootstrap-table-export.min.js"></script>


<script>
  function responseHandler(res) {
    res.rows.forEach(function(row, i) {
      row.index = `<div class="text-center" style="width:50px">${i + 1}</div>`
    })
    return res
  }

  function titleFormatter(data) {
    return `
     <div class="text-center">
       <p style="width:300px">${data}</p>
     </div>
     `
  }

  function descFormatter(data) {
    return `
    <div class="text-center descZone">
      <p style="width:300px">${data}</p>
  </div>
  `
  }

  function coverFormatter(data) {
    return `<img src="${data}" class="blog-image" width="100%" alt="" onclick="zoomImg(this)">
    <!-- The Modal -->
    <div id="myModal" class="modal">
      <span class="close-btn" onclick="closeModal()">&times;</span>
      <div class="img-box">
        <img class="modal-content" id="preview-modal">
        </div>
    </div>`
  }

  function typeFormatter(data) {
    return `
    <div class="text-center">
      <span class="type badge badge-info">${data}</span>
      </div>
    `
  }

  function contentFormatter(data) {
    return `
<div class="text-center">
  <span class="btn btn-primary btn-sm">Chi tiết</span>
</div>
`
  }

  function statisticalFormatter(data) {
    return `
    <div class="text-center container">
      <div class="d-flex justify-content-between">
        <span title="Số lượt thích">
          <i class="far fa-thumbs-up"></i> <br> ${ data.likes } <br>
        </span>
          <span title="Lượng views">
            <i class="far fa-eye"></i> <br> ${ data.views } <br>
          </span>
        </div>
      <div class="d-flex justify-content-between">
       <span title="Điểm đánh giá">
         <i class="fas fa-star"></i> <br> ${ data.rating } <br>
       </span>
       <span title="Số lượng đánh giá">
         <i class="fas fa-abacus"></i> <br> ${ data.counting } <br>
       </span>
        </div>
      </div>
   `
  }

  function roleFormatter(data) {
    return `
     <div class="text-center">      
      <span class="badge ${(data==="ADMIN")? 'badge-success' :'badge-warning'}">${data}</span>
      </div>
     `
  }

  function keywordFormatter(data) {
    return `
<div class="text-center keywordZone">
  ${data.map((elm,index)=>elm).join(", ")}
</div>
`
  }

  function sourceFormatter(data) {
    return `
<div class="text-center">
  ${data}
</div>
`
  }

  function linkFormatter(data) {
    return `
<div class="text-center">
  <a href="${data}" target="_blank">Link bài viết</a>
</div>
`
  }

  function statusFormatter(data) {
    return `
 <div class="text-center">
  ${(data === "PENDING")?`<span class="badge badge-warning"> ${data} </span>`:(data === "ACTIVE" ? `<span class="badge badge-success"> ${data} </span>`:`<span class="badge badge-danger"> ${data} </span>`)}
 </div>
 `
  }

  function writtenByFormatter(data, row) {
    return `<div class="text-center">
      <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modal-${row._id}" onclick="getWritor('${row._id}','${row.role}','${data}','${row.passport}')">
       Chi tiết
      </button>
      <div class="modal fade" id="modal-${row._id}" tabindex="-1" role="dialog" aria-labelledby="writerDetailLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title text-dark" id="writerDetailLabel">Tài khoản viết Blog</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body text-dark text-center" id="blog-${row._id}">
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
      </div>`
  }

  function createdAtFormatter(data) {
    return `<div class="text-center">${ moment(data).format("L") }<br> ${ moment(data).format("LT") }</div>`
  }

  function updatedAtFormatter(data) {
    return `<div class="text-center">${ moment(data).format("L") }<br> ${ moment(data).format("LT") }</div>`
  }

  function handleFormatter(data, row, index) {
    return `<div class="text-center">
           ${row.role!=="MEMBER"? `<a class="btn btn-primary btn-sm" href="/management/content/blog/update-blog/submit-info/${row._id}">Sửa</a>`:""}
         <span class="btn btn-danger btn-sm mt-2" onclick="deleteBlog('${row._id}')">Xóa</span>
         ${row.status==="PENDING"? `<a class="btn btn-warning btn-sm mt-2" href="/management/content/blog/censorship/${row._id}">Duyệt</a>`:""}
      </div>
    `
  }

  function getWritor(blogId, role, passport, writerId) {
    fetch(`/management/content/blog/api/get-writor/${role}/${passport}/${writerId}`)
      .then((res) => res.json())
      .then((data) => {
        const writer = data.writer;
        console.log(writer, document.getElementById(blogId))
        document.getElementById(`blog-${blogId}`).innerHTML = `<img src="/public/avatars/admin/${writer.avatar}" width="150px" />
        <br>
        <b>Username: </b>
        <p>${writer.username}</p>
        <b>Email: </b>
        <p>${writer.email}</p>
        <b>Role: </b>
        <p class="badge badge-success">${writer.role}</p>`
      })
      .catch((error) => console.log(error))
  }
</script>
<script>
  //Turn on turn off modal
  function zoomImg(it) {
    var modal = document.getElementById("myModal");
    var modalImg = document.getElementById("preview-modal");

    modal.style.display = "block";
    modalImg.src = it.src;
  }

  function closeModal() {
    var modal = document.getElementById("myModal");
    modal.style.display = "none";
  }

  //Delete checked 
  var $table = $('#table')
  var $button = $('#deleteChecked')

  $(function() {
    $button.click(function() {
      const idList = [];
      document.querySelectorAll("[name='btSelectItem']:checked").forEach((item, index) => {
        idList.push(item.parentElement.parentElement.parentElement.id)
      })
      // console.log(arr)
      swal({
        title: "Bạn có chắc chắn muốn xóa không",
        text: "Nếu xóa bạn vẫn có thể khôi phục Blog !",
        icon: "warning",
        buttons: true,
        dangerMode: true,
      }).then((willDelete) => {
        if (willDelete) {
          fetch(`/management/content/blog/api/deleteChecked`, {
              method: "DELETE", // or 'PUT'
              headers: {
                "Content-Type": "application/json",
                // 'Content-Type': 'application/x-www-form-urlencoded',
              },
              body: JSON.stringify(idList)
            })
            .then((response) => response.json())
            .then((data) => {
              if (data.isSuccess) {
                swal({
                  title: "Thành công",
                  text: "Đã xóa thành công !",
                  icon: "success",
                  button: "Ok!",
                }).then(() => {
                  location.reload();
                });
              } else {
                swal({
                  title: "Có lỗi rồi",
                  text: "Gặp lỗi hệ thống hoặc danh sách cần xóa trống !",
                  icon: "error",
                  button: "Ok!",
                })
              }
            })
            .catch((error) => {
              console.log("Error:", error);
            });
        } else {
          return;
        }
      });
    })
  });

  function deleteBlog(blogId) {
    swal({
      title: "Bạn có chắc chắn muốn xóa không",
      text: "Nếu xóa bạn vẫn có thể khôi phục blog !",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    }).then((willDelete) => {
      if (willDelete) {
        fetch(`/management/content/blog/api/delete/${blogId}`, {
            method: 'DELETE', // or 'PUT'
          })
          .then(response => response.json())
          .then(data => {
            if (data.isSuccess) {
              swal({
                title: "Thành công",
                text: "Đã xóa thành công !",
                icon: "success",
                button: "Ok!",
              }).then(() => {
                location.reload()
              })
            }

          })
          .catch((error) => {
            console.log('Error:', error);
          })
      } else {
        return;
      }
    });
  }
</script>
<script>
  var $table = $('#table')
  var filterAlgorithm = $('[name="filterAlgorithm"]').val();
  const statusArr = [];
  document.querySelectorAll(".status-option").forEach((elm, index) => {
    statusArr.push(elm.value)
  })
  $('#filterBy').click(function() {
    let status = document.querySelector('[name="filterAlgorithm"]').value;
    if (status === "and") {
      status = statusArr;
    }
    $table.bootstrapTable('refreshOptions', {
      filterOptions: {
        filterAlgorithm: filterAlgorithm
      }
    })
    $table.bootstrapTable('filterBy', {
      status: status
    })
  })
</script>

</html>