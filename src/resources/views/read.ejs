<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- <meta http-equiv="refresh" content="5"> -->
  <title>READ</title>
  <%- include("partials/link") %>
  <link rel="icon" href="/image/tablogo.png">
  <link rel="stylesheet" href="/css/read.css">
</head>

<body>
  <%- include('partials/header') %>
  <section class="section container mt-3" id="section-1">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item">
          <a href="/detail/<%= manga.slug%>"> <%= manga.slug%></a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">chapter-<%= chapter.chapterNumber%></li>
      </ol>
    </nav>
    <p class="text-light">
      <button class="btn btn-success">Chương trước</button>
      <button class="btn btn-primary">Chương sau</button>
      <span class="float-right">
        Đăng lúc: <span class="badge badge-primary"><%= moment(chapter.createdTime).format("L") %> - <%= moment(chapter.createdTime).format("LT") %></span>
      </span>
    </p>
    <div class="text-light text-center">
      <b>Chương <%= chapter.chapterNumber%> - Tựa đề:</b>
      <h2>
        <%= chapter.chapterName%>
      </h2>
    </div>
  </section>
  <section class="section container" id="section-2">
    <%- chapter.chapterContent %>
  </section>
  <section class="section container text-light text-center" id="section-3">
    <h3 class="text-dark">Bình luận chương <span class="badge badge-success text-light">
        <%= chapter.chapterNumber %>
      </span> <i class="fas fa-comments"></i></h3>
    <!-- Plugin Comments Facebook -->
    <div class="comments-area container bg-light">
      <div id="fb-root"></div>
      <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v14.0&appId=452307582987806&autoLogAppEvents=1" nonce="Jmfm3uJg"></script>

      <div class="fb-comments" data-href="http://localhost.local/detail/<%= manga.slug %> /read/chapter-<%=chapter.chapterNumber %>" data-colorscheme="dark" data-width="100%" data-numposts="5">
      </div>
    </div>
    <!-- ******************************** -->

  </section>
  <section class="section " id="section-4">
    <div class="chapter-nav text-light">
      <ul>
        <li>
          <a href="/">
            <i class="fas fa-home mr-2"></i> Trang chủ
          </a>
        </li>
        <li>
          <a href="#">
            <i class="fas fa-exclamation-circle mr-2"></i> Báo lỗi
          </a>
        </li>
        <li class="nav">
          <a href="#"><i class="fas fa-2x  fa-caret-left mr-4"></i></a>
          <select class="form-control" onchange="navSelectChapter(this)">
            <% manga.contentId.chapters.forEach((chap,index) => { %>
            <% if(chap.chapterNumber === chapter.chapterNumber) {%>
            <option value="chapter-<%= chap.chapterNumber%>" selected>
              <%= chap.chapterNumber%>
            </option>
            <% }else{%>
            <option value="/detail/<%= manga.slug %>/read/chapter-<%= chap.chapterNumber%>">
              <%= chap.chapterNumber%>
            </option>
            <%} %>
            <%}); %>
          </select>
          <a href="#"><i class="fas fa-2x fa-caret-right ml-4"></i></a>
        </li>
        <li>
          <span>
            <i class="fas fa-lightbulb"></i> Bật đèn
          </span>
        </li>
        <li>
          <span>
            <i class="fas fa-heart"></i> Theo dõi
          </span>
        </li>
      </ul>
    </div>
  </section>

  <%- include('partials/footer') %>
</body>
<%- include("partials/script") %>
<script src="/js/plugins/read.js"></script>

</html>