    //     console.log('Success:', data);

    //   })
    //   .catch((error) => {
    //     console.error('Error:', error);
    //   });
  }


  // Set History
  document.getElementById('form-advanced-search').addEventListener('submit', function(event) {
    // block form submit event
    event.preventDefault();
    console.log(submit())
    // Do some stuff here
    document.getElementById("filter").setAttribute("value", JSON.stringify(submit()));
    // Continue the form submit
    event.currentTarget.submit();
  })
</script>