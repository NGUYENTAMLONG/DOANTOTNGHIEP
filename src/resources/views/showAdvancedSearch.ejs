<body>
  <%- include('partials/header') %>

  <h2 class="container mt-3 bg-dark rounded text-light">
    <i class='bx bx-search-alt mt-1'></i> Tìm kiếm nâng cao
  </h2>
  <!-- 

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous"> -->


  <form action="/advanced-search/result" method="post" class="container d-flex flex-wrap" id="form-advanced-search">
    <div class="row">
      <label>Tình trạng</label> <br>
      <% categories.forEach(function(type,index){ %>
      <div class="btn-group-toggle m-2" data-toggle="buttons">
        <input type="radio" name="<%= type.name %>" value="2" checked hidden>
        <input type="radio" name="<%= type.name %>" value="1" hidden>
        <input type="radio" name="<%= type.name %>" value="0" hidden>
        <button type="button" id="btn-<%= index %>" onclick="setCheck('<%= index %>','<%= type.name %>')" class="btn focus btn-secondary"><%= type.name %></button>
      </div>
      <div id='result-<%= index %>' class="mr-3" hidden></div>
      <%}) %>
    </div>
    <div class="row" style="width:100%;">
      <div class="col-sm-4 col-md-4 col-lg-4">
        <label for="status">Tình trạng</label> <br>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="status" id="status1">
          <label class="form-check-label" for="status1">
            Hoàn thành
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="status" id="status2">
          <label class="form-check-label" for="status2">
            Đã hoàn thành
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="status" id="status3" checked>
          <label class="form-check-label" for="status3">
            Tất cả
          </label>
        </div>
      </div>
      <div class="col-sm-4 col-md-4 col-lg-4">
        <label for="country">Quốc gia</label><br>
        <select class="form-select form-control">
          <option selected>Tất cả</option>
          <% for (const country in countries) { %>
          <option value="<%= countries[country] %>"><%= countries[country] %></option>
          <%} %>
        </select>
      </div>
      <div class="col-sm-4 col-md-4 col-lg-4">
        <label for="serve">Đối tượng</label><br>
        <select class="form-select form-control">
          <option selected>Mặc định</option>
          <% for (const serve in serves) { %>
          <option value="<%= serves[serve] %>"><%= serves[serve] %></option>
          <%} %>
        </select>
      </div>
    </div>
    <div class="row" style="width:100%;">
      <div class="col-sm-4 col-md-4 col-lg-4">
        <label for="serve">Tác giả</label><br>
        <select class="form-select form-control">
          <option selected>Tất cả</option>
          <% authors.forEach(function(author,index){ %>
          <option value="<%= author._id %>"><%= author._id %></option>
          <%}) %>
        </select>
      </div>
      <div class="col-sm-4 col-md-4 col-lg-4">
        <label for="serve">Dịch giả</label><br>
        <select class="form-select form-control">
          <option selected>Tất cả</option>
          <% translation.forEach(function(elm,index){ %>
          <option value="<%= elm._id %>"><%= elm._id %></option>
          <%}) %>
        </select>
      </div>
      <div class="col-sm-4 col-md-4 col-lg-4">
        <label for="serve">Số chương truyện</label><br>
        <select class="form-select form-control">
          <option selected>Tất cả</option>
          <option value="50">
            <= 50 </option>
          <option value="100">
            <=100 </option>
          <option value="200">
            <=200 </option>
          <option value="500">
            <=500 </option>
          <option value="1000">
            <=1000 </option>
          <option value="2000">
            <=2000 </option>
          <option value="5000">
            <=5000 </option>
          <option value="10000">
            <=10000 </option>
        </select>
      </div>
    </div>
    <div class="row">
      <input type="text" name="filter" id="filter" hidden>
      <button class="btn btn-warning ml-4" type="submit">
        Tìm kiếm
      </button>
    </div>
  </form>
  <%- include('partials/footer') %>
</body>

</html>
